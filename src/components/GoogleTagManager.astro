---
export interface Props {
    id: string;
    partytown?:boolean;
}

const {
    id,
    partytown = false
} = Astro.props as Props;

const attrs = partytown ? { type: "text/partytown" } : {};
---
<!-- Google tag (gtag.js) -->
<script type="text/partytown" async src={`https://www.googletagmanager.com/gtag/js?id=${id}`} is:inline {...attrs}></script>
<script define:vars={{ id }} {...attrs}>
  window.dataLayer = window.dataLayer || [];
  function gtag(){dataLayer.push(arguments);}
  gtag('js', new Date());

  gtag('config', id);
</script>
